@import 'buttons'
@import 'macros'

html
  min-height 100%
  display flex

main
  article
    max-width 60em
    height 100%;
    margin auto
    padding 25px

main.start
  text-align center

  .page:before
    asset('start-logo.svg', 137px, 152px)

  button
    &.start, &.continue
      @extends .pill-button

    &.options, &.credits
      @extends .text-button
      display block
      margin auto
      font-size 16px
      font-weight 300
      letter-spacing 1.25px
      line-height 20px
      opacity .75

main.read
  .next.links
    icon-width = 180px
    icon-height = 130px

    position relative
    display flex
    flex-direction row
    justify-content space-between
    align-items stretch
    margin-bottom 24px
    padding-top icon-height

    &:before
      width icon-width
      height icon-height
      position absolute
      top 0
      left "calc(50% - (%s / 2))" % icon-width
      padding-top "calc(%s - 1em - 24px)" % icon-height
      background center (icon-height - 95px) url('/assets/section-decision-hw-icon.svg') no-repeat
      text-transform uppercase
      font-family "Merriweather Sans"
      font-size 14px
      font-weight 300
      letter-spacing 0
      line-height 18px
      text-align center

    button
      width calc(50% - 8px)
      padding 24px
      border 1.5px solid
      border-radius 30px
