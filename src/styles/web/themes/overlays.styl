body.overlay-open
  overflow hidden

.overlay
  closePad = 60px
  position relative
  z-index 2
  // overflow auto
  background var(--overlayBg)
  font-family "Merriweather Sans"

  .content
    padding 4*gap
    padding-bottom 3*closePad
    max-height 100%
    // overflow auto

    h2
      font-weight 400
      margin-bottom 40px

  .actions
    flex-row()
    align-items flex-end
    position fixed
    bottom 0
    z-index 3
    padding closePad
    // background: linear-gradient(0deg, #000000 0%, rgba(12,19,23,0.8) 47.79%, rgba(30,42,49,0) 100%, rgba(0,0,0,0.1) 100%);
    background @css { linear-gradient(0deg, var(--bgColor) 0%, rgba(var(--bgColorRgb), .8) 47.79%, rgba(var(--bgColorRgb), 0) 100%) }

    button.close
      @extends .outline-button

  &.chapters .list
    flex-column()
    text-align center
    padding 70px 0 3*closePad

    .chapter
      margin-bottom 35px

      .chapter-id
        @extends h5
        color var(--textColor)

      h3
        margin-bottom 14px

      .sections
        flex-column()
        h4
          color var(--textColor)
          line-height 1.3
          margin-bottom 50px

  &.options

    .content
      padding-left 0
      padding-right 0

    label
      @extends h4
      color var(--textColor)
      margin-right auto

    highlight-row()
      flex-row()
      align-items center
      margin-bottom 2px
      padding 16px 31px 16px 25px
      background var(--bgHighlight)

    .reset
      highlight-row()
      margin-bottom 60px

      button
        image-button('options-reset.svg')
        background var(--alert)

    .list
      flex-column()

      .option
        highlight-row()

        .choices
          flex-row(false)

        button
          justify-self flex-end
          background var(--inactive)
          margin-left 20px

          &.active
            background var(--active)

        &.theme .dark-theme button
          image-button('options-theme-dark.svg')
        &.theme .light-theme button
          image-button('options-theme-light.svg')

        &.font .font-sans button
          image-button('options-font-sans.svg')
        &.font .font-serif button
          image-button('options-font-serif.svg')

        &.size .size-m button
          image-button('options-size-m.svg')
        &.size .size-l button
          image-button('options-size-l.svg')
        &.size .size-xl button
          image-button('options-size-xl.svg')

