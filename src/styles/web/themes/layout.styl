@import '../../macros'
@import '../../vars'
@import 'buttons'

html
  min-height 100%
  display flex

main
  max-width maxWidth
  height 100%;
  margin auto
  padding pad
  background-clip border-box
  border 4px solid var(--bgColor)

  .page
    flex-column()

main.start
  text-align center
  asset('start-background.png')
  background-size contain

  .title
    flex 2
    flex-column()
    justify-items center

    .logo
      asset('start-logo.svg', 300px, 266px)
      margin auto
    h1
      display none

  .buttons
    flex 1
    flex-column()

    button
      margin-bottom 40px

      &.start, &.continue
        @extends .pill-button

      &.options, &.credits
        @extends .text-button
        display block
        font-size 16px
        font-weight 300
        letter-spacing 1.25px
        line-height 20px
        opacity .75

main.read
  .next.links
    icon-width = 180px
    icon-height = 130px

    position relative
    display flex
    flex-direction row
    justify-content space-between
    align-items stretch
    margin-bottom 24px
    padding-top icon-height

    &:before
      width icon-width
      height icon-height
      position absolute
      top 0
      left "calc(50% - (%s / 2))" % icon-width
      padding-top "calc(%s - 1em - 24px)" % icon-height
      asset('read-decision-logo.svg')
      background-position center (icon-height - 95px)
      text-transform uppercase
      font-family "Merriweather Sans"
      font-size 14px
      font-weight 300
      letter-spacing 0
      line-height 18px
      text-align center

    button
      width calc(50% - 8px)
      padding 24px
      border 1.5px solid
      border-radius 30px
