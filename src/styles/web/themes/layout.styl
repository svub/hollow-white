@import '../../macros'
@import '../../vars'
@import 'buttons'

html
  min-height 100%
  display flex

main
  max-width maxWidth
  height 100%;
  margin auto
  padding s("calc(%s - 3px)", pad)
  background-clip border-box
  border 4px solid var(--bgColor)
  box-shadow 0 0 1rem black

  .page
    flex-column()

.item
  flex-column()
  height toRem(402)
  margin-top toRem(40)
  border-radius toRem(30)
  border 1px solid var(--itemOutline)
  background var(--bgColor)
  rawAsset('/assets/items/card/stars@2x.jpg')
  background-size contain
  text-align center;

  .title
    flex-column()
    height 100%

    &:before
      content ''
      flex 1
      margin toRem(65) toRem(42) toRem(16)
      rawAsset('/assets/items/bubblegum.svg')
      background-size contain
      background-position center

    .number
      display none

    h3
      @extends h5
      &:before
        content 'Gegenstand'
        display block
        @extends .label
        font-size toRem(12)
        line-height toRem(20)
        font-weight 300

  .content
    display none
