.page.start
  .status
    .chapter:before
      content "Kapitel "
    .chapter::after
      content " | "
    .progress:before
      content "Gesamtfortschritt "

  button.start:before
    content "Beginnen"
  button.continue:before
    content "Fortsetzen"
  button.options:before
    content "Optionen"
  button.credits:before
    content "Mitwirkende"
  button.imprint:before
    content "Impressum"

.page.read
  .next.links:before
    content "Deine Entscheidung"
  .next.links.count-1:before
    content "Weiter zu"

.overlay
  &.options
    .title h2:before
      content "Optionen"
    .reset
      label:before
        content "Fortschritt löschen"
      .confirm
        h2:before
          content "Bist du sicher?"
        p:before
          content "Dein Gesamtfortschritt geht verloren, die Sammelobjekte kannst du behalten, wenn du möchtest."
        button.ok
          &.progress:before
            content "Fortschritt löschen"
          &.all:before
            content "Alles löschen"
        button.cancel:before
          content "Abbrechen"


  &.feedback-mode
    .title h2:before
      content "Danke für dein Feedback!"
    textarea:before
      content "Bitte kopiere den Inhalt des folgenden Textfeldes und sende es mit dem Feedbackformular. Einfach den Link unten anklicken."
    a.feedback-link:before
      content "Feedbackformular starten"

  &.chapters
    .title h2:before
      content "Inhalt"

    .chapter-id:before
      content "Kapitel "

  &.credits
    .title h2:before
      content "Mitwirkende"

  &.imprint
    .title h2:before
      content "Impressum"

  // &.consent
  //   .title h2:before
  //     content "Unterstützen & Datenschutz"

  &.collectables
    .title h2:before
      content "Deine Sammlung"

    .tabs
      button.images:before
        content "Fotos"
      button.items:before
        content "Karten"
