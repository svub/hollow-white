html
  &.dark-theme
    --bgColor black
    --bgColorRgb 0, 0, 0
    --bgColorInverse white
    --bgColorInverseRgb 255, 255, 255
    --fgColor white
    --fgColorRgb 255, 255, 255
    --fgColorInverse black
    --fgColorInverseRgb 0, 0, 0
    // --textColor #aaa
    --textColor rbga(255, 255, 255, .65)
    --textColorRgb 170, 170, 170
    --textColorInverse #333
    --textColorInverseRgb 51, 51, 51
    // --assetsFolder 'dark-theme/'

    // specials
    --overlayBg @css { radial-gradient(circle, #394349 0%, #0D1B22 100%) }
    --decisionButtonBg #0A1116

    // options panel
    --alert #ff483d
    --active #36c64f
    --inactive #888
    --bgHighlight rgba(255, 255, 255, .1)

  &.light-theme
    --bgColor white
    --bgColorRgb 255, 255, 255
    --bgColorInverse black
    --bgColorInverseRgb 0, 0, 0
    --fgColor black
    --fgColorRgb 0, 0, 0
    --fgColorInverse white
    --fgColorInverseRgb 255, 255, 255
    // --textColor #aaa
    --textColor rbga(0, 0, 0, .65)
    --textColorRgb 170, 170, 170
    --textColorInverse #ccc
    --textColorInverseRgb 204, 204, 204
    // --assetsFolder 'light-theme/'

    // specials
    --overlayBg @css { radial-gradient(circle, #394349 0%, #0D1B22 100%) }
    --decisionButtonBg #0A1116

    // options panel
    --alert #ff483d
    --active #36c64f
    --inactive #888
    --bgHighlight rgba(255, 255, 255, .1)

  &.font-serif // main.read .text
    font-family 'Merriweather', Cambria, Cochin, Georgia, Times, 'Times New Roman', serif
  &.font-sans // main.read .text
    font-family 'Merriweather Sans', Helvetica, 'Open Sans', Verdana, Arial, sans-serif

  &.size-m
    font-size baseFontSize
    // --scaling-factor 1
  &.size-l
    font-size baseFontSize + 4px
    // --scaling-factor 1.2
  &.size-xl
    font-size baseFontSize + 12px
    // --scaling-factor 1.5
