@import '../../common/constants'

// --- constants --------------------------------------------------------------

gap = 8px
maxWidth = 26em

// --- vars -------------------------------------------------------------------

main
  --bgColor black
  --bgColorRgb 0, 0, 0
  --bgColorInverse white
  --bgColorInverseRgb 255, 255, 255
  --fgColor white
  --fgColorRgb 255, 255, 255
  --fgColorInverse black
  --fgColorInverseRgb 0, 0, 0
  --textColor #aaa
  --textColorRgb 170, 170, 170
  --textColorInverse #333
  --textColorInverseRgb 51, 51, 51

// --- typography -------------------------------------------------------------

body, button, p
  font-family Cambria, Cochin, Georgia, Times, 'Times New Roman', serif
  font-size 24px
  hyphens auto

h1
  font-weight 400
  font-size 2em
  margin-bottom 1em

h2
  font-weight 400
  font-size 1.5em
  margin-bottom 1em

h3
  font-weight 400
  font-size 1.17em
  margin-bottom 1em

p
  margin-bottom 1em

em
  font-style normal
  font-weight bold


.special
  margin 2em 0
  padding-left .5em
  border-left .125em solid #333

// --- layout -----------------------------------------------------------------

html
  min-height 100%
  display flex

body
  width 100%

main
  height 100%;

button
  padding gap

// -- colors ------------------------------------------------------------------

main, .light-theme main
  --backgroundColor #ffe
  --textColor #332

.dark-theme main
  --backgroundColor #110
  --textColor #eed

inverted() {
  background var(--textColor)
  color var(--backgroundColor)
  transition color 2s, background-color 2s
}
normal() {
  background var(--backgroundColor)
  color var(--textColor)
  transition color 2s, background-color 2s
}

// --- main -------------------------------------------------------------------

.item
  border 1px solid var(--textColor)
  margin-bottom 1em

main
  normal()
  width 100%
  max-width maxWidth
  margin auto
  padding 3*gap

  .next.links
    display flex
    flex-direction row
    justify-content space-between
    margin-bottom 6*gap

    button
      width "calc(50% - %s)" % gap
      padding gap

main.start
  .status
    .chapter:before
      content "Chapter "
    .chapter::after
      content " | "
    .progress:before
      content "Total progress "

  button.start:before
    content "Start"
  button.continue:before
    content "Continue"
  button.options:before
    content "Options"
  button.credits:before
    content "Credits"

main.read
  nav
    display flex
    flex-direction row
    margin-bottom 8*gap

    .back::before
      content "< back"

    .menu
      flex-grow 1
      display flex
      flex-direction row
      justify-content flex-end
      .feedback-mode::before
        content "feedback"
      .items::before
        content "items"
      .chapters::before
        content "chapters"

  .text
    .item
      padding gap
      &:before
        content "Item"

    .error
      padding gap
      border gap solid #e44
      margin-bottom 1em
      .title
        @extends h2
      .message, .example
        @extends p
      .example
        font-family monospace
        font-size .6em
        white-space pre-wrap
        display block
        unicode-bidi embed

  .next.links
    margin-top 8*gap

    .selected
      inverted()

// --- overlays ---------------------------------------------------------------

// animations
@keyframes overlay
  0%
    opacity 0
    transform translateY(100%)
  50%
    opacity 1
  100%
    transform translateY(0)

@keyframes overlay-backdrop
  0%
    backdrop-filter blur(0px)
  80%
    backdrop-filter blur(4px)

.backdrop
  position fixed
  top 0
  left 0
  height 100%
  width 100%
  display flex
  flex-direction column
  backdrop-filter blur(4px)

  &:before // spacer
    margin auto
    content ''
    flex 1 1 gap

  .overlay
    margin auto
    width 100%
    max-width maxWidth
    max-height 100%
    overflow auto
    box-shadow 0 0 50px @css { rgba(var(--textColorRgb), .2) }
    normal()
    padding 3*gap

    .title
      margin-bottom 8*gap

    .actions
      padding-top 8*gap

      .close::before
        content: 'Close'

  &.overlay-enter-active, &.overlay-enter-active .overlay
    animation-duration .6s
  &.overlay-leave-active, &.overlay-leave-active .overlay
    animation-duration .3s
    animation-direction reverse

  &.overlay-enter-active, &.overlay-leave-active
    animation-name overlay-backdrop
  &.overlay-enter-active .overlay, &.overlay-leave-active .overlay
    animation-name overlay

.overlay.credits
  .title h2:before
    content 'Credits'

.overlay.options
  position relative

  .title h2:before
    content 'Options'

  .reset
    margin-bottom 8*gap

    label
      display block

      &:before
        content 'Reset'

    > button:before
      content 'Clear story progress'

    .confirm
      display flex
      flex-direction column
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      padding 3*gap
      background var(--backgroundColor)

      &:before, &:after
        content ''
        flex 1

      &.fade-enter-active, &.fade-leave-active
        transition opacity .5s

      &.fade-enter, &.fade-leave-to
        opacity 0

      h2:before
        content 'Reset everything?'
      p:before
        content 'Your progress will be lost.'
      button.ok:before
        content "Yep, let's start from scratch"
      button.cancel:before
        content 'Nope! Get me out of here!'

  .list
    .option.theme .choices
      display flex
      flex-direction row

      button.active
        inverted()

.overlay.feedbackMode
  .title h2:before
    content 'Thanks for your feedback!'
  p:before
    content 'Please copy and paste the text from below into your feedback form.'
  a.feedback-link:before
    content 'Open feedback form'

.overlay.items
  .title
    margin-bottom 0

    h2:before
      content 'Your items'

  .items
    .count
      margin-bottom 8*gap

      .current:before
        content 'You collected '
      .current:after
        content ' of '
      .total:after
        content ' items.'
    .item
      .title
        margin-bottom gap

        .number
          display inline-block
          .current:before
            content 'Item '
          .current:after
            content ' of '

.overlay.chapters
  .title h2:before
    content 'Chapters you read'

.overlay.shareOverlay
  p.intro:before
    content: 'Just copy the link below and share it with friends.'

  input
    margin 2*gap 0
    width 95%

  p.copied:before
    content 'Link copied!'

@import 'item-flip'
