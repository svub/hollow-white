@import 'vars'

asset(src, w = false, h = false)
  for theme in themes
    selector = s(".%s", theme)
    url = s("/assets/%s/%s", unquote(theme), unquote(src))
    {selector} &
      background center center no-repeat url(url)
      if w
        width w
      if h
        height h

flex-column()
  display flex
  flex-direction column
  width 100%
