body, button, p
  font-family Cambria, Cochin, Georgia, Times, 'Times New Roman', serif
  font-size 24px
  hyphens auto

h1
  font-weight 400
  font-size 2em
  margin-bottom 1em

h2
  font-weight 400
  font-size 1.5em
  margin-bottom 1em

h3
  font-weight 400
  font-size 1.17em
  margin-bottom 1em

p
  margin-bottom 1em

em
  font-style normal
  font-weight bold


.special
  margin 2em 0
  padding-left .5em
  border-left .125em solid #333
