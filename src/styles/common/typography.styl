@import url('https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Merriweather+Sans&display=swap');

// general

body
  font-family 'Merriweather', Cambria, Cochin, Georgia, Times, 'Times New Roman', serif
  font-size 24px

h2
  font-size 30px
  line-height 38px
  font-weight bold
  margin-bottom 32px

h3
  font-size 20px
  line-height 28px
  margin-bottom 32px

h4
  font-size 16px
  font-weight 300
  letter-spacing 0
  line-height 1.6

h5
  font-size 14px
  letter-spacing 0
  line-height 18px

p
  font-size 18px
  line-height 28px
  font-weight 300

em
  font-style normal
  font-weight bold

button
  font-family 'Merriweather Sans', sans-serif
  font-size 14px
  letter-spacing .88px
  line-height 18px
  text-align center

// special

.small
  font-size 12px
  letter-spacing 1.5px
  line-height 15px
